<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:background="@drawable/blur" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/black"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:text="You are eating: "
            android:textColor="#FFFFFFFF"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="172dp"
            tools:layout_editor_absoluteY="327dp" />

        <ImageView
            android:id="@+id/typeimg"
            android:layout_width="158dp"
            android:layout_height="173dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_launcher_foreground" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@color/black">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Nearby Resturants: "
            android:textSize="20dp"
            tools:layout_editor_absoluteX="172dp"
            android:textColor="#FFFFFFFF"
            tools:layout_editor_absoluteY="327dp" />

        <TextView
            android:id="@+id/resturantOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="No Results Found"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="172dp"
            android:textColor="#FFFFFFFF"
            tools:layout_editor_absoluteY="327dp" />

        <TextView
            android:id="@+id/resturantTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="18sp"
            tools:layout_editor_absoluteX="170dp"
            android:textColor="#FFFFFFFF"
            tools:layout_editor_absoluteY="371dp" />

        <TextView
            android:id="@+id/resturantThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="18sp"
            tools:layout_editor_absoluteX="174dp"
            android:textColor="#FFFFFFFF"
            tools:layout_editor_absoluteY="416dp" />

        <TextView
            android:id="@+id/resturantFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="18sp"
            tools:layout_editor_absoluteX="170dp"
            android:textColor="#FFFFFFFF"
            tools:layout_editor_absoluteY="460dp" />

        <TextView
            android:id="@+id/resturantFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text=""
            android:textSize="18sp"
            tools:layout_editor_absoluteX="172dp"
            android:textColor="#FFFFFFFF"
            tools:layout_editor_absoluteY="503dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Refresh"
        tools:layout_editor_absoluteX="157dp"
        tools:layout_editor_absoluteY="196dp" />



</LinearLayout>
